<div class="artist">
    <div class="info artist__info">
        <img class="info__photo" src="{{port}}{{Artist.Avatar}}" alt="">
        <div style="display: inline-block;">
            <div class="medium-text info__name">Исполнитель</div>
            <div class="large-text">{{Artist.Name}}</div>
        </div>
    </div>
    <h1 class="artist__title">Песни</h1>
    <ul class="playlist artist__list">
        {{#each Artist.Tracks}}
            <li class="playlist__item">
                <div class="playlist__image-container" style="display: inline-block;">
                    <div class="medium-text playlist__index playlist__index__position"></div>
                    <div class="playlist__playbutton playlist__playbutton__position" data-section="miniArtistPlayButton" data-url="{{@index}}"></div>
                </div>
                <div style="display:inline-block">
                    <img class="playlist__photo" src="{{../port}}{{this.Preview}}" alt="">
                </div>
                <div class="medium-text playlist-item__name" style="display: inline-block;">
                    {{this.Name}}
                </div>
                <div class="medium-text playlist-item__duration" style="display: inline-block;">
                    {{this.Duration}}
                </div>
            </li>   
        {{/each}}   
    </ul>
    <h1 class="artist__title">Альбомы</h1>
    <ul class="albumlist artist__album-list">
        {{#each Artist.Albums}}
            <li class="albumlist__item">
                <div class="albumlist__image-container">
                    <img class="albumlist__photo" data-section="link" data-url="album/{{this.Id}}" data-id="{{this.Id}}" src="{{../port}}{{this.Preview}}" alt="1">
                    <div class="albumlist__playbutton albumlist__playbutton__position" data-section="playButton" data-url="{{this.Id}}"></div>
                </div>
                <div class="medium-text albumlist__name" data-section="link" data-id="{{this.Id}}" data-url="album/{{this.Id}}">
                    {{this.Name}}
                </div>
            </li>   
        {{/each}}   
    </ul>
</div>
