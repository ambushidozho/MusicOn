<div class="player">
    <audio preload="meta" src=""></audio>
    <div class="progress-bar">
        <div class="progress-bar__progress"></div>
    </div>
    <div class="player__container">
        <div class="prev-btn"><img class="player-btns" data-section="prevBtn" src="/static/img/SwitchBack.svg" alt="">
        </div>
        {{#if Playing}}
            <div class="play-btn"><img class="player-btns" data-section="playBtn" src="/static/img/Pause.svg" alt=""></div>
        {{else}}
            <div class="play-btn"><img class="player-btns" data-section="playBtn" src="/static/img/Play.svg" alt=""></div>
        {{/if}}
        {{#each PlayerComponentConfig}}
            <div class="{{this.key}}"><img class="player-btns" data-section="{{this.key}}" src="{{this.href}}" alt=""></div>
        {{/each}}

        <div>
            {{#if song.Preview}}
                <img class="avatar" src="{{port}}{{song.Preview}}" alt="">
            {{else}}
                <img class="avatar" src="/static/img/grey.png" alt="">
            {{/if}}
        </div>
        <div>
            <div class="title medium-text">{{song.Name}}</div>
            <a href="/artist/{{song.ArtistId}}" class="artistname small-text" data-section="link"
                data-url="/artist/{{song.ArtistId}}" data-Id="{{song.ArtistId}}">{{song.ArtistName}}</a>
        </div>
        {{#if song.isLiked}}
            <div class="like-btn"><img class="player-btns" data-section="likeBtn" src="/static/img/LikePressed.svg" alt="">
        </div>
        {{else}}
            <div class="like-btn"><img class="player-btns" data-section="likeBtn" src="/static/img/Like.svg" alt=""></div>
        {{/if}}
        <div class="volume-btn"><img class="player-btns" data-section="volumeBtn" src="/static/img/SoundOn.svg" alt="">
        </div>
        <input class="volume-bar" type='range' min="0" max="100" value="0" step="1">

    </div>
</div>