<div class="feedContainer">
    <div class="artist">
        <img class="artistPhoto" src="{{port}}{{User.Avatar}}" alt="">
        <div style="display: inline-block;">
            <div class="songName">{{User.Username}}</div>
            <div class="ArtistName">{{User.Email}}</div>
        </div>
    </div>
    <form action="post">
        <ul>
            <li class="profileItem">
                <div class="albumName"> Имя пользователя </div>
                <input class="authInput" data-section="username" type="text" placeholder="{{User.Username}}" required>
            </li>
            <li class="profileItem">
                <div class="albumName"> Email </div>
                <input class="authInput" data-section="email" type="email" placeholder="{{User.Email}}" required>
            </li>
            <li class="profileItem">
                <div class="albumName"> Дата рождения </div>
                <input class="authInput" data-section="birthDate" type="date" placeholder="{{User.BirthDate}}" required>
            </li>
            <li class="profileItem">
                <div class="albumName"> Фото профиля </div>
                <input type="file" class="defaultButton" style="display: inline-block;"></button>
            </li>
            <li class="profileItem">
                <button class="defaultButton" style="display: inline-block;" type="submit">Готово</button>
            </li>   
        </ul>
    </form>
</div>