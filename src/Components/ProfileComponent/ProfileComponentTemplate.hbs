<div class="feedContainer">
    <div class="artist">
        {{#if user.avatar}}
        <img class="artistPhoto" src="{{port}}{{user.avatar}}" alt="">
        {{else}}
        <img class="artistPhoto" src="/static/img/worm.jpg" alt="">
        {{/if}}
        <div style="display: inline-block;">
            <div class="largeText">{{user.username}}</div>
            <div class="mediumText">{{user.email}}</div>
        </div>
    </div>
    <form method="post">
        <ul class="profileList">
            <li class="profileItem">
                <div class="mediumText"> Имя пользователя </div>
                <input class="authInput" data-section="username" type="text" value="{{user.username}}" required>
            </li>
            <li class="profileItem">
                <div class="mediumText"> Email </div>
                <input class="authInput" data-section="email" type="email" value="{{user.email}}" required>
            </li>
            <li class="profileItem">
                <div class="mediumText"> Дата рождения </div>
                <input class="authInput" data-section="birthDate" type="date" value="{{user.birthdate}}" required>
            </li>
            <li class="profileItem">
                <div class="mediumText"> Фото профиля </div>
                <label class="inputFile">
                    <span class="fileInput" type="text"></span>
                    <input type="file" name="file" data-section="fileInput">        
                    <span class="inputFileBtn mediumText">Выберите файл</span>
                </label>
            </li>
            <li class="profileItem">
                <button class="defaultButton" style="display: inline-block;" type="submit">Готово</button>
            </li>
        </ul>
    </form>
</div>